#!/data/data/com.termux/files/usr/bin/bash

: "/etc/profile" && [[ -f "$_" ]] && source "$_"
: "$HOME/.bashrc" && [[ -f "$_" ]] && source "$_"

bind "\C-f":beginning-of-line

if command -v vim &>/dev/null; then
  : "$SSHRCD/vimrc" && [[ -f "$_" ]] &&
    alias v="command vim -u '$_'" &&
    export EDITOR="v"
  alias vdf="vimdiff"
  alias e="vim"
fi

: "$SSHRCD/common.sh" && [[ -f "$_" ]] && source "$_"
: "$SSHRCD/del" && [[ -x "$_" ]] && alias del="$_"

bind '"2": "2>&1 "'
bind '"a": "| cat -A"'
bind '"e": "2>/dev/null "'
bind '"h": "| head -q "'
bind '"l": "| less"'
bind '"n": ">/dev/null "'
bind '"t": "| tail -f"'
bind '"w": "| wc -l"'

alias md="mkdir -p"

alias -- -="cd -"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ssl="ss -ltn"

if command -v ag &>/dev/null; then
  alias agc="ag --color"
  bind '"g": "| ag --color "'
elif command -v rg &>/dev/null; then
  alias rg="rg --smart-case"
  alias rgc="\\rg --smart-case --color=always"
  bind '"g": "| \\rg --smart-case --color=always "'
else
  alias ag="grep -Pin"
  alias agc="grep -Pin --color=always"
  bind '"g": "| grep -Pin --color=always "'
fi

take() {
  mkdir -p "$1" && cd "$1" || return
}
